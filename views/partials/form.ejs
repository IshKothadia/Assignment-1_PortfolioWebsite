<!-- form handling -->
<div class="jumbotron jumbotron-form">
    <form action="/api/contacts" id="add-contact" method="POST">
        <div class="new-contact">
            <div class="row">
                <div class="col">
                    <label for="name">Name</label>
                    <input type="hidden" name="id" value="">
                    <input type="text" class="form-control" name="name" value="" placeholder="Enter Name" required>
                </div>
                <div class="col">
                    <label for="name">Number</label>
                    <input type="text" class="form-control" name="number" value="" placeholder="Enter Number" required>
                </div>
            </div>
            <div>
                <label for="name" class="mt-2">Email Address</label>
                <input type="text" class="form-control" name="email" value="" placeholder="Enter Email" required>
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-save mt-3" style="margin:7px 0; font-weight:bolder;">Save</button>
            </div>
        </div>
    </form>
</div>